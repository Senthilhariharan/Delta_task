<style>
form
{
  position:absolute;
  left: 250px;
  top: 30px;

}

</style>
<script>
circle1();

    var timerFunction = null;

    function start() {
        if(timerFunction == null) {
            timerFunction = setInterval(animate, 20);
        }
    }

    function stop() {
        if(timerFunction != null){
            clearInterval(timerFunction);
            timerFunction = null;
        }
    }

    
 function animate() {
var a=0;
	 if(document.getElementById('scon').value==1)
  a=a+1;                                          
                                                        
else if(document.getElementById('scon').value==2)
  a=a+2;
else if(document.getElementById('scon').value==3)
  a=a+3;
else if(document.getElementById('scon').value==4)
  a=a+4;
else if(document.getElementById('scon').value==5)
  a=a+5;
else if(document.getElementById('scon').value==6)
  a=a+6;
else if(document.getElementById('scon').value==7)
  a=a+7;
else if(document.getElementById('scon').value==8)
  a=a+8;
else if(document.getElementById('scon').value==9)
  a=a+9;
else if(document.getElementById('scon').value==10)
  a=a+10;


        var circle = document.getElementById("circle1");
        var x = circle.getAttribute("cx");
        var y = circle.getAttribute("cy");
	if( y<=20 && y>=10 && x<200 )
	{
		var newX = a + parseInt(x);
		circle.setAttribute("cx", newX);
	}
	if(x>=200 && x<210 && y < 80)
	{
		var newY = a + parseInt(y);
		circle.setAttribute("cy", newY);   
	}      
	if(y>=80 && y<90 && x>20)
	{
		var newX = parseInt(x) - a;
		circle.setAttribute("cx", newX);
	}
	if(x<=20 && x>10 && y>20)
	{
		var newY = parseInt(y) -a ;
		circle.setAttribute("cy", newY);   
	}	
	
	 
}
function speedcontrol()                                   
{
var n=document.getElementById('scon').value;

}
</script>
<br/>
<input type="button" value="Startmotion" onclick="start();">
<input type="button" value="Stopmotion" onclick="stop();">
</head>
<body>
<form>

<B>CHANGE THE SPEED</B> </br> <input type="range"  min="1" max="10" id="scon" onmouseup="speedcontrol()" > </input>  


</form>
</body>
